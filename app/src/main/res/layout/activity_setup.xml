<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="?attr/colorSurface">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="32dp"
        android:gravity="center">

        <!-- App Logo -->
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@mipmap/ic_launcher"
            android:layout_marginBottom="24dp" />

        <!-- Welcome Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome to Aksara Notes"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="?attr/colorPrimary"
            android:layout_marginBottom="8dp" />

        <!-- Subtitle -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Secure your notes, database, and calendar with a master password"
            android:textSize="16sp"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:gravity="center"
            android:layout_marginBottom="32dp" />

        <!-- Security Info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/chip_background"
            android:padding="16dp"
            android:layout_marginBottom="32dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ”"
                android:textSize="20sp"
                android:layout_marginEnd="12dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Your data will be encrypted and protected. This password cannot be recovered if forgotten."
                android:textSize="14sp"
                android:textColor="?attr/colorOnSurfaceVariant" />

        </LinearLayout>

        <!-- Master Password Input -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Master Password"
            app:startIconDrawable="@drawable/ic_lock_surface"
            app:endIconMode="password_toggle"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_marginBottom="8dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_master_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:maxLines="1" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Password Strength Indicator -->
        <TextView
            android:id="@+id/tv_password_strength"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter a password"
            android:textSize="12sp"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:layout_marginBottom="16dp" />

        <!-- Confirm Password Input -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_confirm_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Confirm Password"
            app:startIconDrawable="@drawable/ic_lock_surface"
            app:endIconMode="password_toggle"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_marginBottom="24dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_confirm_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:maxLines="1" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Biometric Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/chip_background"
            android:padding="16dp"
            android:layout_marginBottom="32dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ‘†"
                    android:textSize="20sp"
                    android:layout_marginEnd="12dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Enable Biometric Authentication"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="?attr/colorPrimary" />

                    <TextView
                        android:id="@+id/tv_biometric_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Checking biometric availability..."
                        android:textSize="14sp"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:layout_marginTop="4dp" />

                </LinearLayout>

                <Switch
                    android:id="@+id/switch_enable_biometric"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:enabled="false" />

            </LinearLayout>

        </LinearLayout>

        <!-- Password Requirements -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="32dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Password Requirements:"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â€¢ At least 8 characters long\nâ€¢ Mix of uppercase and lowercase letters\nâ€¢ Include numbers and special characters\nâ€¢ Avoid common passwords"
                android:textSize="12sp"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:lineSpacingExtra="2dp" />

        </LinearLayout>

        <!-- Create Password Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_create_password"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Create Master Password"
            android:textSize="16sp"
            android:textStyle="bold"
            android:enabled="false"
            app:backgroundTint="?attr/colorPrimary"
            app:cornerRadius="8dp" />

        <!-- Security Notice -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="âš ï¸ Important: This password cannot be recovered. Please store it securely."
            android:textSize="12sp"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:gravity="center"
            android:layout_marginTop="16dp" />

    </LinearLayout>

</ScrollView>