<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="vertical"
    android:padding="4dp"
    android:background="@drawable/calendar_day_background">

    <!-- Day number -->
    <TextView
        android:id="@+id/tv_day_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1"
        android:textSize="16sp"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        android:textColor="?attr/colorOnSurface" />

    <!-- Events container (Mac-style) -->
    <LinearLayout
        android:id="@+id/layout_events"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginTop="2dp">

        <!-- Event indicators will be added programmatically -->
        <!-- Each event shows as a small colored bar or dot -->

    </LinearLayout>

</LinearLayout>